---
import Config  from '../../config/config.js'

let { head  } = Astro.props
let { link  } = Astro.props
let { text  } = Astro.props
let { image } = Astro.props
let { open  } = Astro.props

let tcolor = Config.key ('site.colors.texts.primary')
let hsize  = Config.key ('site.sizes.large')
let tsize  = Config.key ('site.sizes.medium')
---


<div class="activity row">
  <div class="nine wide column">
    <h2 class="head">{head}</h2>
    <p  class="text">{text}</p>
    <div class="action">
      { open && <a class="ui big button" href={link}>Saber Más</a>}
      {!open && <a class="ui big button disabled" href={link}>Próximamente</a>}
    </div>
  </div>
  <div class="seven wide column">
    <img src={image} class="ui image" alt={head}>
  </div>
</div>

<style define:vars={{ tcolor, hsize, tsize }}>
  .activity {
    color: var(--tcolor);
  }
  .activity .head {
    font-size   : var(--hsize);
    text-align  : left;
  }
  .activity .text {
    font-size   : var(--tsize);
    text-align  : left;
  }
  .activity .action {
    text-align  : left;
  }

  @media (max-width: 767px) {
    .activity {
      margin-left : 20px !important;
    }
  }
</style>