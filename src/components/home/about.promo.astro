---
import Config  from '../../config/config.js'

let lcolor  = Config.key ('site.colors.lines.secondary')
let scolor  = Config.key ('site.colors.surfaces.dark.tertiary') + 80
let image   = Config.key ('site.home.promo.image')
let video   = Config.key ('site.home.promo.video')

---

<div class="ui container">
  <div class="promo">
    <div class="frame">
      <div class="layer show">
        <img src={image}>
      </div>
      <video class="video" title="presentacion" loop>
        <source src={video} type="video/mp4">
      </video>
    </div>
  </div>
</div>
    
<style define:vars={{ lcolor, scolor }}>
  .promo {
    margin          : auto 100px;
    padding         : 10px;
    border          : 1px solid var(--lcolor);
    border-radius   : 5px;
    box-shadow      : 0 1px 2px 0 rgba(34,36,38,.15);
  }
  .promo .frame {
    position        : relative;
    width           : 100%;
    padding-bottom  : 56.25%;
  }
  .promo .frame .layer {
    position        : absolute;
    top             : 0;
    left            : 0;
    width           : 100%;
    height          : 100%;
    display         : flex;
    align-items     : center;
    justify-content : center;
    z-index         : 1;
  }
  .promo .frame .layer img {
    width           : 100%;
    object-fit      : cover;
  }
  .promo .frame .video {
    position       : absolute;
    top            : 0;
    left           : 0;
    width          : 100%;
    height         : 100%;
    border         : 0;
    border-radius  : 3px;
  }
  .show { opacity  : .75; transition: all 1s; }
  .hide { opacity  : 0;   transition: all 1s; }

  @media(max-width: 900px) {
    .promo {
      margin : auto 10px;
    }
  }
</style>

<script>
  const PROMO = '.promo'
  const FRAME = '.frame'
  const LAYER = '.layer'
  const VIDEO = '.video'
  const EVENT = 'click'
  const SHOW  = 'show'
  const HIDE  = 'hide'
  const TYPE  = 'video/mp4'

  let promo = document.querySelector (PROMO)
  let layer = document.querySelector (LAYER)
  let frame = document.querySelector (FRAME)
  let video = document.querySelector (VIDEO)
  let show  = true
  let ok    = video.canPlayType (TYPE)
  if (ok) {
    frame.addEventListener (EVENT, function () {
      let classes = layer.classList
      if (show) {
        classes.remove (SHOW)
        classes.add    (HIDE)
        video.play ()
        video.currentTime = 0
      }
      else {
        classes.remove (HIDE)
        classes.add    (SHOW)
        video.pause ()
        video.currentTime = 0
      }
      show = !show
    })
  }
  else promo.remove ()

</script>
