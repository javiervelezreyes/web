---
import Config  from '../../config/config.js'

let tsize   = Config.key ('site.sizes.xlarge')
let csize   = Config.key ('site.sizes.regular')
let tweight = Config.key ('site.weights.bold')
let cweight = Config.key ('site.weights.medium')
let color   = Config.key ('site.colors.texts.primary')

let title   = Astro.props.title
let caption = Astro.props.caption
---

<div class="ui center aligned container">
  <div class="title">{title}</div>
  <p class="caption">{caption}</p>
  <div class="separator"></div>
</div>

<style define:vars={{tsize, csize, tweight, cweight, color}}>
  .container {
    margin        : 0px auto;
    color         : var(--color);
  }
  .title {
    padding       : 0 10px;
    font-size     : var(--tsize);
    font-weight   : var(--tweight);
    line-height   : 1.3;
    overflow-wrap : break-word;
  }
  .caption {
    margin-top    : 0px !important;
    font-size     : var(--csize);
    font-weight   : var(--cweight);
    line-height   : 2.5;
    overflow-wrap : break-word;
  }
  .separator {
    width         : 60px;
    height        : 8px;
    margin        : 40px auto;
    text-align    : center;
    background    : var(--color);
  }
</style>